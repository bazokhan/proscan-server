type User {
  id: ID! @id
  username: String!
  email: String! @unique
  password: String!
}

type Session {
  id: ID! @id
  publicId: String!
  name: String!
  author: User!
  published: Boolean!
  questions: [Question!]! @relation(name: "SessionQuestions")
  activeQuestion: Question @relation(name: "SessionActiveQuestion")
  results: [SessionResult!]!
}

type Question {
  id: ID! @id
  author: User!
  title: String
  imageUrl: String
  prologue: String
  main: String!
  options: [Option!]! @relation(name: "QuestionOptions")
  correctOption: Option! @relation(name: "QuestionCorrectOption")
  results: [QuestionResult!]!
}

type Option {
  id: ID! @id
  text: String!
}

type UserResult {
  id: ID! @id
  user: User
  session: Session!
  question: Question!
  option: Option!
}

type OptionResult {
  id: ID! @id
  userResults: [UserResult!]!
}

type QuestionResult {
  id: ID! @id
  session: Session!
  question: Question!
  optionResults: [OptionResult!]!
}

type SessionResult {
  id: ID! @id
  questionResults: [QuestionResult!]!
}
