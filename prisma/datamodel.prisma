type User {
  id: ID! @id
  username: String!
  email: String! @unique
  password: String!
}

type Guest {
  id: ID! @id
  username: String!
}

type Session {
  id: ID! @id
  publicId: String!
  author: User!
  status: Status!
  questions: [Question!]!
  activeQuestion: String!
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
  guests: [Guest!]
}

enum Status {
  ACTIVE
  PAUSED
  ENDED
}

type Question {
  id: ID! @id
  author: User!
  body: String!
  imageUrls: [String!]
  choices: [Choice!]! @relation(name: "QuestionChoices")
  correctChoices: [Choice!]! @relation(name: "QuestionCorrectChoices")
  createdAt: DateTime @createdAt
  updatedAt: DateTime @updatedAt
}

type Choice {
  id: ID! @id
  body: String!
  chosenBy: [String!]
}
